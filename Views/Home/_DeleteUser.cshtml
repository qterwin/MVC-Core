@model mvccore.Models.Book.User
@{
    var Name = $"{Model.Name} {Model.MiddleName} {Model.Surname}";
    
}
@using (Html.BeginForm("DeleteUser", "Home", FormMethod.Post))
{
    <div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> Delete </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to remove <strong> @Model.Name @Model.MiddleName @Model.Surname </strong>  to the list?</p>
                </div>

                <div class="modal-footer">
                    <input type="hidden" name="userID" value="@Model.UserId" />
                    <button type="submit" id="btnDeleteUser" class="btn btn-outline-danger">Yes</button>
                    <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal"> NOOOOO!!</button>
                </div>
            </div>
        </div>
    </div>
}